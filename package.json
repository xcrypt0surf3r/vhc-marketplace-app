    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.0",
    "postcss": "^8.4.6",
    "pre-commit": "^1.2.2",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.19"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
